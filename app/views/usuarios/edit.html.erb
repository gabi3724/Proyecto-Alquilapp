<h1 class="text-center mb-3">Editar información</h1>

<% if @usuario.errors.any? %>
    <div class="mb-3">
        <% @usuario.errors.full_messages.each do |msj| %>
            <div class="alert alert-warning mx-auto mb-0 text-center w-75 pt-2 pb-2" role="alert">
                <%= msj %>
            </div>
        <% end %>
    </div>
<% end %>

<div class="d-flex justify-content-center">
    <div class="w-50">
        <%= form_with model: @usuario do |f| %>
            <div class="mb-4">
                <%= f.label :dni, "DNI:", class:"form-label" %>
                <%= f.text_field :dni, placeholder: "DNI",class:"form-control" %>
            </div>
            <div class="mb-4">
                <label class="form-label">Contraseña:</label>
                <%= link_to "Cambiar contraseña", edit_pass_path, class: "btn btn-primary mx-3" %>
            </div>
            <div class="mb-3">
                <%= f.label :fecha_nacimiento, "Fecha de nacimiento:", class:"form-label" %>
                <%= f.date_field :fecha_nacimiento, min: Date.new(1920,01,01), max: 21.years.ago, class:"form-control w-35 text-center" %>
            </div>
            <div class="mb-3 d-flex justify-content-center">
                <%= link_to "Cancelar", @usuario, class: "btn btn-danger mx-2" %>
                <%= f.submit "Guardar cambios", class: "btn btn-success mx-2" %>
            </div>
        <% end %>
    </div>
</div>