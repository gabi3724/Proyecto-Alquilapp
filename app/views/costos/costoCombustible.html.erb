<h1 class="text-center mt-3 mb-4">Modificar costo de combustible</h1>

<p class="text-center mt-3 mb-4 fs-4">Ingrese el nuevo costo</p>

<% flash.each do |tipo, msj| %>
    <div class="alert alert-warning mx-auto mb-3 text-center w-75 pt-2 pb-2" role="alert">
        <%= msj %>
    </div>
<% end %>

<div class="d-flex justify-content-center">
    <%= form_tag confirmar_costo_combustible_path, method: "get" do %>
        <div class="mb-4">
            <%= label_tag :monto, "Costo anterior: $" + Costo.first.combustible.to_s, class:"form-label" %>
            <%= text_field_tag :monto, nil, class:"form-control" %>
        </div>
        <div class="mb-3 d-flex justify-content-center">
            <%= link_to "Cancelar", root_path ,class: "btn btn-primary-orange col px-0 mx-sm-2" %>  
            <%= submit_tag "Cambiar", class: "btn btn-primary-orange col px-0 mx-sm-2" %>
        </div>
    <% end %>
</div>

<p class="text-center mt-3">Para los autos con motor a combustión: precio por litro de combustible</p>
<p class="text-center mb-4">Para los autos con motor eléctrico: precio por 1% de carga</p>