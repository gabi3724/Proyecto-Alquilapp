<% flash.each do |tipo, msj| %>
    <div class="alert alert-success mx-auto mb-0 text-center w-75 pt-2 pb-2" role="alert">
        <%= msj %>
    </div>
<% end %>
<div class="container mt-4">
    <div class="row mb-5">
        <div class="col">
            <h1>Mi perfil</h1>
        </div>
        <div class="col col-md-2">
            <% if admin_logueado? && admin_actual.id == @admin.id %>
                <%= link_to "Editar información", edit_perfil_path, class: "btn btn-primary" %>
            <% end %>
        </div>
    </div>
    <div class="row mb-5">
        <div class="col">
            <h3 class="row mb-3">Mi información</h3>
            <h5 class="row mb-3"> DNI: </h5>
            <h5 class="row mb-3"> Fecha de nacimiento: </h5>
        </div>
        <div class="col">
            <br><br>
            <div class="row mb-3"> <%= @admin.dni %> </div>
            <div class="row mb-3"> <%= @admin.fecha_nacimiento.to_time.strftime("%e/%m/%Y") %> </div>
        </div>
    </div>
</div>