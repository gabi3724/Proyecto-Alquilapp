    <div class="row">
            <div class="col">
                <%= link_to "Cancelar", cargar_saldo_path, class: "btn btn-danger" %>
            </div>
            <div class="col">
                <%= form_tag carga_path, method: "get" do %>
                    <%= hidden_field_tag :monto, @monto %>
                    <%= submit_tag "Confirmar", class: "btn btn-success" %>
                <% end %>
            </div>
    </div>
</div>